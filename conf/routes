# Routes                                            
# This file defines all application routes (Higher priority routes first)                                            
# ~~~~                                              

# Home page                                            
#GET     /                                           controllers.Application.index

GET           /eis/foundation/companies        @controllers.eis.foundation.CompanyController.query()
POST          /eis/foundation/companies        @controllers.eis.foundation.CompanyController.create()
PUT           /eis/foundation/companies/:id        @controllers.eis.foundation.CompanyController.update(id: Long)
DELETE        /eis/foundation/companies/:id        @controllers.eis.foundation.CompanyController.delete(id: Long)

GET           /eis/wms/receiving-orders        @controllers.eis.wms.ReceivingOrderController.findAll()
POST          /eis/wms/receiving-orders        @controllers.eis.wms.ReceivingOrderController.create()
POST          /eis/wms/receiving-orders/:id/articles.xls        @controllers.eis.wms.ReceivingOrderController.importXls(id: Long)
GET           /eis/wms/receiving-orders/:id/articles        @controllers.eis.wms.ReceivingOrderController.articles(id: Long)
DELETE        /eis/wms/receiving-orders/:orderId/articles/:articleId        @controllers.eis.wms.ReceivingOrderController.deleteArticle(orderId: Long, articleId: Long)
PUT           /eis/wms/receiving-orders/:id/execute        @controllers.eis.wms.ReceivingOrderController.execute(id: Long)

GET           /eis/wms/warehouses        @controllers.eis.wms.WarehouseController.query()
POST          /eis/wms/warehouses        @controllers.eis.wms.WarehouseController.create()
PUT           /eis/wms/warehouses/:id        @controllers.eis.wms.WarehouseController.update(id: Long)
DELETE        /eis/wms/warehouses/:id        @controllers.eis.wms.WarehouseController.delete(id: Long)

GET           /eis/wms/regional-allocations        @controllers.eis.wms.RegionalAllocationController.findAll()
POST          /eis/wms/regional-allocations        @controllers.eis.wms.RegionalAllocationController.create()
POST          /eis/wms/regional-allocations/:id/articles        @controllers.eis.wms.RegionalAllocationController.addArticles(id: Long)
GET           /eis/wms/regional-allocations/:id/articles        @controllers.eis.wms.RegionalAllocationController.articles(id: Long)
DELETE        /eis/wms/regional-allocations/:orderId/articles/:articleIds        @controllers.eis.wms.RegionalAllocationController.deleteArticle(orderId: Long, articleIds: String)
PUT           /eis/wms/regional-allocations/:id/execute        @controllers.eis.wms.RegionalAllocationController.execute(id: Long)

GET           /eis/wms/distribution-allocations        @controllers.eis.wms.DistributionAllocationController.findAll()
POST          /eis/wms/distribution-allocations        @controllers.eis.wms.DistributionAllocationController.create()
POST          /eis/wms/distribution-allocations/:id/articles        @controllers.eis.wms.DistributionAllocationController.addArticles(id: Long)
GET           /eis/wms/distribution-allocations/:id/articles        @controllers.eis.wms.DistributionAllocationController.articles(id: Long)
DELETE        /eis/wms/distribution-allocations/:orderId/articles/:articleIds        @controllers.eis.wms.DistributionAllocationController.deleteArticle(orderId: Long, articleIds: String)
PUT           /eis/wms/distribution-allocations/:id/execute        @controllers.eis.wms.DistributionAllocationController.execute(id: Long)


GET           /eis/article/articles        @controllers.eis.article.ArticleController.query()




# Map static resources from the /public folder to the /assets URL path                                            
GET           /assets/*file        controllers.Assets.at(path="/public", file)
